extends layout

block content
   .main.container
    
    .row
      .col-md-6.col-md-offset-3
        if msg
            div(class="alert alert-success") #{msg}
        h1.display-4.m-b-2 Add new courses
        form(method='POST' action='/addcourse')
          div.form-group
            label(for='coursename') Course Name
            input.form-control(type='text' id='cname' placeholder='course' name='course')
          div.form-group
            label(for='credit') Credit
            input.form-control(type='number' id='credit' placeholder='credit' name='credit')
          div.form-group
            label(for='teacher') Teacher
            input.form-control(type='text' id='teacher' placeholder='teacher' name='teacher')
          div.form-group
            label(for='text') Branch
            select.form-control(type='text' id='branch' placeholder='branch' name='branch')
                option  -- Select --
                option  CSE
                option  EEE
                option  ECE
                option  MECH
                option  BCL
          button.btn.btn-primary(type='submit') Submit